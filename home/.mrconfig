[.homesick/repos/homeshick]
checkout = git clone 'git://github.com/andsens/homeshick.git' 'homeshick'

[.homesick/repos/dotfiles]
checkout = homeshick clone 'git@github.com:bigashman/dotfiles.git' 'dotfiles'

[.homesick/repos/bin]
checkout = git clone 'git@github.com:bigashman/bin.git' 'bin'

[./ansible/]
checkout = git clone 'git@github.com:ansible/ansible.git' 'ansible'

[.vim_runtime]
checkout =
  git clone 'https://github.com/amix/vimrc.git' '~/.vim_runtime'
  /bin/sh ~/.vim_runtime/install_awesome_vimrc.sh
  echo 'set nomouse' >> ~/.vim_runtime/my_configs.vim
